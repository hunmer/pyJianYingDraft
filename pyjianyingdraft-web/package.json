{
  "name": "pyjianyingdraft-web",
  "version": "0.1.0",
  "description": "jianyinX",
  "author": "hunmer",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron:dev:win": "chcp 65001 && concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron\" --kill-others",
    "electron:dev:macos": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron\" --kill-others",
    "electron:build": "next build && node scripts/build-electron.js",
    "run:backend": "cd ../pyJianYingDraftServer && python run.py",
    "build:backend": "cd ../pyJianYingDraftServer && python build_server.py",
    "build:all": "npm run build:backend && npm run electron:build"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.0",
    "@codemirror/commands": "^6.7.0",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/language": "^6.10.0",
    "@codemirror/lint": "^6.8.0",
    "@codemirror/search": "^6.5.0",
    "@codemirror/state": "^6.4.0",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.34.0",
    "@coze/api": "^1.3.7",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^6.0.0",
    "@mui/material": "^6.0.0",
    "@mui/material-nextjs": "^6.0.0",
    "@mui/system": "^6.0.0",
    "@xzdarcy/react-timeline-editor": "^0.1.9",
    "autoprefixer": "^10.4.21",
    "axios": "^1.13.1",
    "diff": "^8.0.2",
    "diff2html": "^3.4.52",
    "next": "15.5.6",
    "postcss": "^8.5.6",
    "react": "^19",
    "react-diff-view": "^3.3.2",
    "react-dom": "^19",
    "socket.io-client": "^4.8.1",
    "unidiff": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.2",
    "electron": "latest",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.6",
    "file-loader": "^6.2.0",
    "typescript": "^5",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.pyjianyingdraft.web",
    "productName": "PyJianYingDraft",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/pyJianYingDraftServer.exe",
        "to": "pyJianYingDraftServer.exe",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
