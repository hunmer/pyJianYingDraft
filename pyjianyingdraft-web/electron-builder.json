{
  "appId": "com.jianyinX.app",
  "productName": "jianyinX",
  "nsis": false,
  "compression": "maximum",
  "publish": null,
  "asar": true,
  "directories": {
    "output": "dist"
  },
  "files": [
    "out/**/*",
    "electron/**/*",
    "package.json",
    ".env"
  ],
  "extraResources": [
    {
      "from": "../pyJianYingDraftServer/dist/pyJianYingDraftServer.exe",
      "to": "pyJianYingDraftServer.exe"
    },
    {
      "from": "../pyJianYingDraftServer/aria2",
      "to": "aria2"
    }
  ],
  "npmRebuild": false,
  "nodeGypRebuild": false,
  "buildDependenciesFromSource": false,
  "asarUnpack": [
    "**/*.node"
  ],
  "win": {
    "target": "dir",
    "electronLanguages": ["zh-CN", "zh-TW", "en-US", "en-GB"],
    "icon": "../webapp/favicon.ico"
  },
  "mac": {
    "target": "dir",
    "icon": "../webapp/apple-touch-icon.png"
  },
  "linux": {
    "target": "dir",
    "icon": "../webapp/android-chrome-512x512.png"
  }
}